<h2>Crear Producto</h2>
<form onsubmit="return addProduct(this)" id="create-product">
  Nombre:
  <input type="text" id="title" name="title" />
  <br>
  Precio:
  <input type="number" id="price" name="price" />
  <br>
  Imagen:
  <input type="text" id="thumbnail" name="thumbnail" />
  <br>
  <button class="btn btn-primary">Crear</button>
</form>


<h3>Lista de productos:</h3>
<table id="ptable-head" class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagen</th>
    </tr>
  </thead>
  <tbody id="ptable-products">
  </tbody>
</table>

<h3>Chat:</h3>
<form id="chat-form" onsubmit="return addMessage(this)">
  <div>
    <input
      type="text"
      id="email"
      placeholder="Fidelios@gmail.com"
      style="width:30%"
      required
    />
    <hr />
    <div id="messages"></div>
    <p></p>
    <input
      type="text"
      class="form-control"
      id="text"
      placeholder="Escribe un mensaje"
      style="width:50%"
    />
    <p></p>
    <button type="submit" class="btn btn-primary">Enviar</button>

  </div>
</form>